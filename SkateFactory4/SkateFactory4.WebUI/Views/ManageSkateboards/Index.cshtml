@using SkateFactory4.WebUI.WebApiClients;
@model IEnumerable<Skateboard>

<h1>Manage Skateboards</h1>

<a asp-action="AddOrUpdate" class="btn btn-outline-primary">Click here to Add</a>

<!--
PLAIN HTML WAY:
<a href="/ManageSkateboards/AddOrUpdate" class="btn btn-outline-primary">Click here to Add</a>
-->

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkateType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrakeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShapeType)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody class="hoverable">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(x => item.SkateType)
                </td>
                <td>
                    @Html.DisplayFor(x => item.BrakeType)
                </td>
                <td>
                    @Html.DisplayFor(x => item.ShapeType)
                </td>
                <td>
                    <a href="/ManageSkateboards/AddOrUpdate?Id=@item.Id" class="btn btn-outline-primary">Update</a>
                    <form asp-action="Remove">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <input type="submit" value="Remove" class="btn btn-danger" onclick="return removeConfirmation();" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>